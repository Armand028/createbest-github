<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fonddecran2" />

    <TextView
        android:id="@+id/signUpAs"
        android:layout_width="299dp"
        android:layout_height="78dp"
        android:fontFamily="sans-serif-medium"
        android:text="Would you like to sign up:"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="275dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="380dp">



        <Button
            android:id="@+id/signUpAsCooker_btn"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/purple"
            android:text="As a cooker"
            android:textSize="20sp"
            app:cornerRadius="20dp"
            android:layout_marginBottom="20sp"/>

        <Button
            android:id="@+id/signUpAsClient_btn"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/purple"
            android:text="As a client"
            android:textSize="20sp"
            app:cornerRadius="20dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>